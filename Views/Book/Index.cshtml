@model IEnumerable<DSS_MVC.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Books Overview</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Images)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (Book book in Model) {
        <tr>
            <td>
                @book.BookName
            </td>
            <td>
                @book.ISBN
            </td>
            <td>
                @if (book.Images.Any())
                {
                    <a asp-action="Details" asp-route-id="@book.BookId"><img src="Images/Get?bookId=@book.BookId&fileName=@book.Images.First().FileName" alt="@book.Images.First().Name" width="50" height="50" /></a>
                }
                else
                {
                    <img src="/images/notfound.png" alt="image not found" width="50" height="50">
                }
            </td>
            <td style="text-align: right">
                <a asp-action="Edit" asp-route-id="@book.BookId">Edit</a> |
                <a asp-action="Details" asp-route-id="@book.BookId">Details</a> |
                <a asp-action="Delete" asp-route-id="@book.BookId">Delete</a>
                <br />
                <div style="font-style:italic; font-size:10px">
                    Posted by @book.CreatedBy on @book.CreatedDate
                    <br />
                    Modified by @book.ModifiedBy on @book.ModifiedDate
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
