@model IEnumerable<DSS_MVC.Models.Loan>

@{
    ViewData["Title"] = "Index";
}

<h1>Loan Information</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Borrowers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookCondition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Borrowers.FirstName)
                @Html.DisplayFor(modelItem => item.Borrowers.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Books.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookCondition)
            </td>
            <td style="text-align: right">
                <a asp-action="Edit" asp-route-id="@item.LoanId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.LoanId">Delete</a>
                <br />
                <div style="font-style:italic; font-size:10px">
                    Posted by @item.CreatedBy on @item.CreatedDate
                    <br />
                    Modified by @item.ModifiedBy on @item.ModifiedDate
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
